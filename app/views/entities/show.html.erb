<header style="background-color: #3778c2;">
    <nav class="navbar navbar-expand-lg navbar-dark p-0">
      <div class="container-fluid">
        <%= link_to :back, class: "text-white" do %> 
          <i class="bi bi-arrow-left-short", style="font-size: 44px"></i>
        <% end %>
        <p class="navbar-brand m-0">DETAILS</p>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
              <li class="nav-item"><%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
              </li>
          </ul>
        </div>
      </div>
  </nav>
</header>
<div class="d-flex flex-column ms-3 me-3">
  <div class="mt-3 p-2 bg-white shadow-sm bg-body">
    <div class="d-flex align-items-center mb-2">
      <i class="#bi bi-<%= @group.icon_img %> me-3", style="font-size: 38px; color:#878a8f;"></i> 
      <div class="d-flex flex-column justify-content-between">
        <p class="mb-0" style="color:#434c55;"><%= @group.name %></p>
        <p class="mb-0" style="color: #989da3; font-size: 12px;"><%= @entity.created_at.strftime("%d %b %Y") %></p>
      </div>
    </div>
    <hr class="m-0 p-0 align-self-center" style="height:1px;width:100%;border-width:0;color:#989da3;background-color:#989da3">
    <div class="d-flex justify-content-between mt-3">
    <p class="mb-0" style="color:#878a8f;"><%= @entity.name %></p>
    <p class="mb-0" style="color:#434c55;">$<%= @entity.amount %></p>
    </div>
  </div>
</div>
