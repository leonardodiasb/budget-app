<header style="background-color: #3778c2;">
    <nav class="navbar navbar-expand-lg navbar-dark p-0">
      <div class="container-fluid">
        <%= link_to :back, class: "text-white" do %> 
          <i class="bi bi-arrow-left-short", style="font-size: 44px"></i>
        <% end %>
        <p class="navbar-brand m-0">GROUPS</p>
        <button class="navbar-toggler invisible" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
              <li class="nav-item"><%= link_to 'Register', new_user_registration_path, class: 'nav-link' %></li>
              <li class="nav-item"><%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %></li>
              <li class="nav-item"><%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
<div class="d-flex p-3 justify-content-between align-items-center bg-white border-bottom">
  <div><p class="m-0" style="color: #878a8f;">Total:</p></div>
  <div><p class="m-0" style="color: #434c55;">$<%= @total %></p></div>
</div>
<ul class="d-flex flex-column ms-3 me-3" style="">
  <% @groups.includes(:user).each do |group| %>
    <%= link_to user_group_path(user_id: @user.id, id: group.id) do %>
      <li class="mt-3 p-2 bg-white shadow-sm bg-body">
        <div class="float-start me-2">
         <i class="#bi bi-<%= group.icon_img %>", style="font-size: 34px; color:#878a8f;"></i> 
        </div>
        <div class="mt-2 d-flex justify-content-between">
          <div class="d-flex flex-column justify-content-between">
            <p class="mb-0" style="color: #878a8f;"><%= group.name %></p>
            <p class="mb-0" style="color: #989da3; font-size: 12px;"><%= group.created_at.strftime("%d %b %Y") %></p>
          </div>
          <div>
            <p class="mb-0" style="color: #434c55;">$<%= group.total_expenses_group %> </p>
          </div>
        </div>
      </li>
    <% end %>
  <% end %>
  <% if @groups.length == 0 %>
    <li>
      <h2>There is no groups yet. Please create one.</h2>
    </li>
  <% end %>
</ul>
<%= link_to 'Add Group', new_user_group_path(@user.id), class: "m-3 btn btn-outline-primary" %>