<%= form_with model: @group, url: user_groups_path(@user.id), method: :post do |form| %>
  <h2>Add Group</h2>
  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name, :required => true %>
  </div>
  <div class="field">
    <%= form.label :icon %><br>
    <%= form.text_field :icon %>
  </div>
  <div>
    <%= form.submit "Add group" %>
  </div>
<% end %>